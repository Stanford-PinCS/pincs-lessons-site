generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


// Store db locally.
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// schema
model User {
  id       String  @id @default(cuid())
  first_name     String
  last_name      String?
  email    String  @unique
  password String  // store bcrypt hash
  website  String? // Make required for teacher login
  email_verified Boolean @default(false) // Has the user verified their email?
  teacher_verified Boolean @default(false) // Is the user actually a teacher?
}